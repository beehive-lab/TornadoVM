<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>tornado-sdk-${project.version}-${buildNumber}/</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>src</directory>
      <!-- README file in share/tornado -->
      <includes>
        <include>README.md</include>
      </includes>
      <outputDirectory>share/tornado</outputDirectory>
      <fileMode>0444</fileMode>
    </fileSet>
    <fileSet>
      <directory>src</directory>
      <!-- License file in root directory -->
      <includes>
        <include>LICENSE</include>
      </includes>
      <outputDirectory>./</outputDirectory>
      <fileMode>0444</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/bin</directory>
      <!-- tornado binaries -->
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.sh</include>
        <include>*.py</include>
        <include>tornado*</include>
        <include>misc/*.py</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/etc</directory>
      <!-- tornado etc configuration -->
      <outputDirectory>etc</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
      <fileMode>0666</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/docs</directory>
      <!-- Tornado documentation in docs/ -->
      <outputDirectory>docs</outputDirectory>
      <includes>
        <include>*.pdf</include>
        <include>*.md</include>
      </includes>
      <fileMode>0444</fileMode>
    </fileSet>
    <fileSet>
      <directory>../unittests</directory>
      <!-- Tornado unittests provided as examples -->
      <outputDirectory>examples</outputDirectory>
      <fileMode>0444</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/examples</directory>
      <!-- Tornado full examples copied into examples directory -->
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>TestTornado.java</include>
      </includes>
      <fileMode>0666</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/examples/generated</directory>
      <!-- Tornado full examples copied into examples directory -->
      <outputDirectory>examples/generated</outputDirectory>
      <includes>
        <include>add.cl</include>
      </includes>
      <fileMode>0666</fileMode>
    </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <!-- Enable access to all projects in the current multimodule build! -->
      <useAllReactorProjects>true</useAllReactorProjects>
      <!-- Now, select which projects to include in this module-set. -->
      <includes>
        <include>tornado:tornado-runtime</include>
        <include>tornado:tornado-collections</include>
        <include>tornado:tornado-drivers-opencl</include>
        <include>tornado:tornado-examples</include>
        <include>tornado:tornado-benchmarks</include>
        <include>tornado:tornado-unittests</include>
      </includes>
      <binaries>
        <outputDirectory>share/java/tornado</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useStrictFiltering>false</useStrictFiltering>
      <unpackOptions>
        <includes>
          <include>*.dylib</include>
          <include>*.dll</include>
          <include>*.so</include>
        </includes>
      </unpackOptions>
      <includes>
        <include>tornado:tornado-drivers-opencl-jni:jar:libs</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
